<h1>Новая статья</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    Заголовок<br />
    <%= f.text_field :title %>
  </p>
  <p>
    Рубрика<br />
    <%= f.text_field :column %>
  </p>
  <p>
    Дата<br />
    <%= f.date_select :date %>
  </p>
  <p>
    Текст статьи<br />
    <%= f.text_area :content %>
  </p>
  <p>
    Ссылка на изображение<br />
    <%= f.text_field :image_url %>
  </p>
  <p>
    <%= f.submit 'Создать' %>
  </p>
<% end %>

<%= link_to 'Назад', articles_path %>
